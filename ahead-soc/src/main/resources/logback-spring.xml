<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
	<contextName>Ahead-SOC</contextName>
	<!-- 定义输出格式 ：%d表示日期，%thread表示线程名，%-5level：级别从左显示5个字符宽度%msg：日志消息，%n是换行符-->
    <property name="pattern" value="%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{50} - %msg%n"/>

	<!-- 属性文件:在properties文件中找到对应的配置项 -->
	<springProperty scope="context" name="logging.path"	source="logging.path" defaultValue="./logs" />
	
	<appender name="consoleLog"	class="ch.qos.logback.core.ConsoleAppender">
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<pattern>${pattern}</pattern>
			<charset>UTF-8</charset>
		</encoder>
	</appender>
	
	
	<appender name="redis-sync" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<!-- 过滤info级别 -->
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>INFO</level>
		</filter>
		<!-- 日志格式 -->
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<pattern>${pattern}</pattern>
			<charset>UTF-8</charset>
		</encoder>
		<!--滚动策略 -->
		<rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
			<!--按时间保存日志 修改格式可以按小时、按天、月来保存 -->
			<fileNamePattern>${logging.path}/redis-sync.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
			<!-- each file should be at most 100MB, keep 60 days worth of history, but at most 20GB  -->
			<maxFileSize>10KB</maxFileSize>
			<maxHistory>2</maxHistory>
			<totalSizeCap>20GB</totalSizeCap>
		</rollingPolicy>
	</appender>

	<!-- 指定需要关闭输出日志的包 -->
	<logger name="org.apache" level="ERROR"></logger>
	<logger name="org.springframework" level="ERROR"></logger>
	
	<!-- redis同步的日志 -->
	<logger name="cn.dcube.ahead.soc.redis" level="INFO" additivity="true">
		<appender-ref ref="redis-sync" />
	</logger>
	
	<!-- addtivity:是否向上级loger传递打印信息。默认是true。 -->
	<root level="debug">
		<appender-ref ref="consoleLog" />
	</root>
</configuration>